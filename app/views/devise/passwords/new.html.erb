
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <fieldset>
    <div id="legend">
      <legend class="">Forgot your password?</legend>
    </div>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email, :required => true, :autofocus => true, input_html: { class: 'input-xlarge' } %>
      <%= f.input :type, :required => false, collection: [ Tenant.name, Syndic.name ], input_html: { class: 'chzn-select' } %>
    </div>
    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <%= f.button :submit, "Send me reset password instructions" %>
      </div>
    </div>
  </fieldset>
<% end %>
