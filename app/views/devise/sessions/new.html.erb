
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <fieldset>
    <div class="input-prepend" title="Username">
      <span class="add-on"><i class="icon-user"></i></span>
      <%= f.input_field :login, label: false, :autofocus => true, class: 'input-large span10' %>
    </div>
    <div class="clearfix"></div>
    <div class="input-prepend" title="Password">
      <span class="add-on"><i class="icon-lock"></i></span>
    <%= f.input_field :password, label: false, class: 'input-large span10' %>
    </div>
    <div class="clearfix"></div>
    <div title="Type" class="text-center">
    <%= f.input_field :type, collection: [ Tenant, Syndic ], class: 'span10', 'data-rel' => 'chosen', label_method: Proc.new { |i| i.model_name.human }, value_method: :name %>
    </div>
    <div class="clearfix"></div>
    <div class="button-login">
      <%= f.button :submit, 'Login', class: 'btn btn-info' %>
    </div>
  </fieldset>
<% end %>
