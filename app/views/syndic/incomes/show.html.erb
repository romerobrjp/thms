<%- model_class = Income -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<%= render partial: 'shared/incomes/income', locals: { income: @income } %>

<div class="form-actions">
  <%= link_to t('helpers.links.back'), syndic_townhouse_incomes_path(@townhouse), :class => 'btn'  %>
  <%= link_to t('helpers.links.edit'), edit_syndic_townhouse_income_path(@townhouse, @income), :class => 'btn' %>
  <%= link_to t('helpers.links.destroy'), syndic_townhouse_income_path(@townhouse, @income),
              :method => 'delete',
              :data => { :confirm => t('helpers.links.confirm') },
              :class => 'btn btn-danger' %>
</div>
<%= render :partial => 'sidebar' %>
