<%= simple_nested_form_for @user, url: syndic_update_me_path, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :email %>
  <%= f.input :name %>
  <%= f.input :cpf %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <%= f.fields_for :address do |address_form| %>
    <%= render partial: 'shared/addresses/form', locals: { f: address_form } %>
  <% end %>

  <%= render partial: 'shared/phones/nested_form', locals: { f: f } %>  

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('helpers.links.cancel'), syndic_me_path, :class => 'btn' %>
  </div>
<% end %>
