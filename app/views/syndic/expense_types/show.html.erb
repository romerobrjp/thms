<%- model_class = ExpenseType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @expense_type.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @expense_type.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:townhouse_id) %>:</strong></dt>
  <dd><%= @expense_type.townhouse_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              syndic_townhouse_expense_types_path(@townhouse), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_syndic_townhouse_expense_type_path(@townhouse, @expense_type), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              syndic_townhouse_expense_type_path(@townhouse, @expense_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<%= render partial: 'sidebar' %>