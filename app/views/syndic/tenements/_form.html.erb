<%= simple_form_for [:syndic, @townhouse, @tenement], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :tenant, input_html: { class: 'chzn-select' }, label_method: :cpf_name %>
  <div class="control-group select optional">
    <label class="select optional control-label"></label>
    <div class="controls">
      <%= link_to t('.new_tenant'), new_syndic_tenant_path(redirect_url: request.fullpath), class: 'btn' %>
    </div>
  </div>
  <%= f.input :location %>
  <%= f.input :rent_value %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t("helpers.links.cancel"), syndic_townhouse_tenements_path(@townhouse), :class => 'btn' %>
  </div>
<% end %>
