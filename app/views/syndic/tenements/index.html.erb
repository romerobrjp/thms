<%- model_class = Tenement -%>
<div class="box span12">
  <div class="box-header">
    <h2><i class="icon-align-justify"></i><span class="break"></span><%=t '.title', :default => model_class.model_name.human.pluralize %></h2>
    <div class="box-icon">
      <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
    </div>
  </div>
  <div class="box-content">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:location) %></th>
          <th><%= model_class.human_attribute_name(:tenant) %></th>
          <th><%=t "helpers.actions" %></th>
        </tr>
      </thead>
      <tbody>
        <% @tenements.each do |tenement| %>
          <tr>
            <td><%= tenement.location %></td>
            <td><%= tenement.tenant.name %></td>
            <td>
              <%= link_to t("helpers.links.show"), syndic_townhouse_tenement_path(@townhouse, tenement), :class => 'btn btn-mini btn-info' %>
              <%= link_to t("helpers.links.edit"), edit_syndic_townhouse_tenement_path(@townhouse, tenement), :class => 'btn btn-mini' %>
              <%= link_to t("helpers.links.destroy"), syndic_townhouse_tenement_path(@townhouse, tenement),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="form-actions">
      <%= link_to t("helpers.links.new"), new_syndic_townhouse_tenement_path(@townhouse), :class => 'btn btn-primary' %>
    </div>
  </div>
</div>
