<%- model_class = Expense -%>
<div class="box span12">
  <div class="box-header">
    <h2>
      <i class="icon-align-justify"></i><span class="break"></span>
      <%=t '.title', :default => model_class.model_name.human.pluralize %>
    </h2>
    <div class="box-icon">
      <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
    </div>
  </div>
  <div class="box-content">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:type) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:date) %></th>
          <th><%= model_class.human_attribute_name(:value) %></th>
          <th><%=t 'helpers.actions' %></th>
        </tr>
      </thead>
      <tbody>
        <% @expenses.each do |expense| %>
          <tr>
            <td><%= expense.type.name %></td>
            <td><%= expense.description %></td>
            <td><%= expense.date %></td>
            <td><%= expense.value %></td>
            <td>
              <%= link_to t('helpers.links.show'), syndic_townhouse_expense_path(@townhouse, expense), :class => 'btn btn-mini btn-info' %>
              <%= link_to t('helpers.links.edit'), edit_syndic_townhouse_expense_path(@townhouse, expense), :class => 'btn btn-mini' %>
              <%= link_to t('helpers.links.destroy'), syndic_townhouse_expense_path(@townhouse, expense),
                          :method => :delete,
                          :data => { :confirm => t("helpers.links.confirm") },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to t('helpers.links.new'), new_syndic_townhouse_expense_path, :class => 'btn btn-primary' %>
  </div>
</div>