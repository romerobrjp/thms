<%- model_class = Expense -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<%= render partial: 'shared/expenses/expense', locals: { expense: @expense } %>

<div class="form-actions">
  <%= link_to t('helpers.links.back'), syndic_townhouse_expenses_path(@townhouse), :class => 'btn'  %>
  <%= link_to t('helpers.links.edit'), edit_syndic_townhouse_expense_path(@townhouse, @expense), :class => 'btn' %>
  <%= link_to t('helpers.links.destroy'), syndic_townhouse_expense_path(@townhouse, @expense),
              :method => 'delete',
              :data => { :confirm => t('helpers.links.confirm') },
              :class => 'btn btn-danger' %>
</div>
<%= render :partial => 'sidebar' %>
