<%- model_class = Bulletin -%>
<div class="box span12">
  <div class="box-header">
    <h2>
      <i class="icon-align-justify"></i><span class="break"></span>
      <%=t '.title' %>
    </h2>
    <div class="box-icon">
      <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
    </div>
  </div>
  <div class="box-content">
    <%= render partial: 'shared/bulletins/bulletin' %>

    <%= link_to t('helpers.links.back'), syndic_townhouse_bulletins_path(@townhouse), :class => 'btn'  %>
    <% if @bulletin.draft? %>
      <%= link_to t('helpers.links.publish'), syndic_townhouse_publish_bulletin_path(@townhouse, @bulletin), :class => 'btn btn-warning' %>
      <%= link_to t('helpers.links.edit'), edit_syndic_townhouse_bulletin_path(@townhouse, @bulletin), :class => 'btn' %>
      <%= link_to t('helpers.links.destroy'), syndic_townhouse_bulletin_path(@townhouse, @bulletin),
                  :method => 'delete',
                  :data => { :confirm => t('helpers.links.confirm') },
                  :class => 'btn btn-danger' %>
    <% end %>
  </div>
</div>
<div class="box span12">
  <div class="box-header">
    <h2>
      <i class="icon-align-justify"></i><span class="break"></span>
      <%=t 'misc.answers_comments' %>
    </h2>
    <div class="box-icon">
      <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
    </div>
  </div>
  <div class="box-content">
    <% if @bulletin.published? %>
      <%= render partial: 'shared/answers/answers', locals: { 
        answers: @bulletin.answers,
        answerable: @bulletin,
        redirect_url: syndic_townhouse_bulletin_path(@townhouse, @bulletin)
      } %>
    <% end %>
  </div>
</div>