<%- model_class = Call -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @call.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @call.message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:public) %>:</strong></dt>
  <dd><%= @call.public %></dd>
  <dt><strong><%= model_class.human_attribute_name(:townhouse_id) %>:</strong></dt>
  <dd><%= @call.townhouse_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tenement_id) %>:</strong></dt>
  <dd><%= @call.tenement_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              calls_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_call_path(@call), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              call_path(@call),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
