<div class="box span12">
  <div class="box-header">
    <h2><i class="icon-align-justify"></i><span class="break"></span>
      <%=t '.title' %>
    </h2>
    <div class="box-icon">
      <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
    </div>
  </div>
  <div class="box-content">
    <%= render partial: 'shared/bulletins/bulletin' %>
    <div class="text-right">
      <%= link_to t('.back', :default => t("helpers.links.back")),  tenant_tenement_bulletins_path(@tenement), :class => 'btn'  %>
    </div>
  </div>
</div>

<div class="box span12">
  <div class="box-header">
    <h2>
      <i class="icon-align-justify"></i><span class="break"></span>
      <%=t 'misc.answers_comments' %>
    </h2>
    <div class="box-icon">
      <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
    </div>
  </div>
  <div class="box-content">
    <% if @bulletin.published? %>
    <%= render partial: 'shared/answers/answers', locals: { 
      answers: @bulletin.answers,
      answerable: @bulletin,
      redirect_url: tenant_tenement_bulletin_path(@tenement, @bulletin)
    } %>
    <% end %>
  </div>
</div>
