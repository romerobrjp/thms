<h1>Choose a tenement to manage</h1>

<% @tenements.each do |tenement| %>
  

  <div class="span12">
    <div class="row">
      <div class="span8">
        <h4><strong><a href="#"><%= tenement.townhouse.name %> - <%= tenement.location %></a></strong></h4>
      </div>
    </div>
    <div class="row">
      <div class="span2">
        <a href="#" class="thumbnail">
            <img src="http://placehold.it/260x180" alt="">
        </a>
      </div>
      <div class="span6">      
        <p>
          <%= tenement.townhouse.information %>
        </p>
        <p><a class="btn" href="#">Read more</a></p>
      </div>
    </div>
  </div>
<hr>

<% end %>